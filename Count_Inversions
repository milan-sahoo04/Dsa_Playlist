  // count Inversion
    // brute
    public static int count_inversion(int arr[]) {
        int count = 0;
        for (int i = 0; i < arr.length - 1; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                if (arr[i] > arr[j]) {
                    count++;
                }
            }
        }
        return count;
    }


int arr[] = { 5, 3, 2, 4, 1 };
        // System.out.println("Count is : " + count_inversion(arr));
